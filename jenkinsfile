pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
	  - name: shell
            image: mcr.microsoft.com/powershell:preview-windowsservercore-1809
	    command:
            - cat
            tty: true  
        '''
    }
  }
  stages {
    stage('build') {
      steps {
        container('docker') {
          sh 'docker --version'
          sh 'docker build -t windows-pdaja .'
        }
      }
    }
  }
}
