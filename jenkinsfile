pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
	  Targeting Windows
          nodeSelector:
           beta.kubernetes.io/os: windows
           beta.kubernetes.io/arch: amd64
            command:
            - cat
            tty: true  
        '''
    }
  }
  stages {
    stage('build') {
      steps {
        container('docker') {
          sh 'docker --version'
          sh 'docker build -t windows-pdaja .'
        }
      }
    }
  }
}
