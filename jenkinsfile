pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
           containers:
           - name: windows
             image: mcr.microsoft.com/powershell:preview-windowsservercore-1809
            command:
            - cat
            tty: true
            securityContext:
              runAsUser: 0
            volumeMounts:
             - name: dockersock
               mountPath: /var/run/docker.sock
          volumes:
          - name: dockersock
            hostPath:
               path: /var/run/docker.sock
        '''
    }
  }
  stages {
    stage('buid') {
      steps {
        container('docker build') {
          sh 'docker --version'	
         }
       }
     }	   
   }
 }
