pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker:latest
            command:
            - cat
            tty: true
            securityContext:
              runAsUser: 0
            volumeMounts:
             - name: dockersock
               mountPath: /var/run/docker.sock
          volumes:
          - name: dockersock
            hostPath:
               path: /var/run/docker.sock
        '''
    }
  }
  stages {
    stage('Run docker') {
      steps {
        container('docker') {
          sh 'echo ls'	
	
         }
       }
     }
	 stage('Build image') {
	   steps {
	     sh 'docker build -t docker:latest .'
       }
     }
   }
 }
