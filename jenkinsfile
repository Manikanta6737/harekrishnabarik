pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:latest
    command:
    - cat
    tty: true
    securityContext:
      runAsUser: 0
    volumeMounts:
    - name: dockersock
      mountPath: /var/run/docker.sock
  volumes:
  - name: dockersock
    hostPath:
      path: /var/run/docker.sock
  tolerations:
  - key: "node.kubernetes.io/os"
    value: "windows"
    effect: "NoSchedule"  
'''
        }
    }
    stages {
    stage('build') {
      steps {
        container('docker') {
          sh 'docker --version'
          sh 'docker build -t windows .'
        }
      }
    }
  }
}
